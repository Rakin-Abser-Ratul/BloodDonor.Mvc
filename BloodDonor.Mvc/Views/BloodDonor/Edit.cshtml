@using BloodDonor.Mvc.Models.Entitites
@using BloodDonor.Mvc.Models.ViewModel
@model BloodDonorEditViewModel
<!-- Usually same viewmodel as Create -->

@{
    ViewData["Title"] = "Edit Blood Donor";
}

<h4>Edit Blood Donor</h4>
<hr />

<div class="row">
    <div class="col-md-6">      
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <!-- Very important: send the ID back! -->
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label for="FullName" class="control-label">Full Name</label>
                <input asp-for="FullName" class="form-control" id="FullName" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" id="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="DateOfBirth" class="control-label">Date Of Birth</label>
                <input asp-for="DateOfBirth" class="form-control" type="date" id="DateOfBirth" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="ContactNumber" class="control-label">Contact Number</label>
                <input asp-for="ContactNumber" class="form-control" id="ContactNumber" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="BloodGroup" class="control-label">Blood Group</label>
                <select asp-for="BloodGroup" class="form-control" asp-items="Html.GetEnumSelectList<BloodGroup>()" id="BloodGroup"></select>
                <span asp-validation-for="BloodGroup" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="Weight" class="control-label">Weight</label>
                <input asp-for="Weight" class="form-control" type="number" min="1" max="200" step="1" id="Weight" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="Address" class="control-label">Address</label>
                <input asp-for="Address" class="form-control" id="Address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="LastDonationDate" class="control-label">Last Donation Date</label>
                <input asp-for="LastDonationDate" class="form-control" type="date" id="LastDonationDate" />
                <span asp-validation-for="LastDonationDate" class="text-danger"></span>
            </div>

            <!-- Profile Picture - show current + allow replacement -->
            <div class="form-group mb-4">
                <label class="control-label">Current Profile Picture</label><br/>
                @if (!string.IsNullOrEmpty(Model.ExistingProfilePicture))
                {
                    <img src="@Model.ExistingProfilePicture" alt="Current profile" style="max-width:180px; max-height:180px; object-fit:cover; border-radius:8px;" />
                }
                else
                {
                    <p class="text-muted">No picture uploaded yet</p>
                }
            </div>

            <div class="form-group mb-4">
                <label for="ProfilePicture" class="control-label">Upload New Profile Picture (optional)</label>
                <input asp-for="ProfilePicture" class="form-control" type="file" accept="image/*" id="ProfilePicture" />
                <small class="text-muted">Leave empty to keep current photo</small>
            </div>

            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary me-2" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}